<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/lightGrey" android:centerColor="@color/lightGrey" android:endColor="@color/lightGrey"/>
            <corners android:radius="2dp" />
            <stroke android:width="0.5dp" android:color="@color/white"/>
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/white" android:centerColor="@color/white" android:endColor="@color/white"/>
            <corners android:radius="2dp" />
            <stroke android:width="0.5dp" android:color="@color/grey"/>
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>
</selector>